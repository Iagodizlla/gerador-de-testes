﻿@using static Gerador_de_testes.WebApp.Models.FormularioMateriaViewModel
@model CadastrarMateriaViewModel

@{
    Layout = "_Layout";
    ViewBag.Titulo = "Cadastro de Materia";
}

<hr />
<div class="row justify-content-center my-5">
    <div class="col-md-8">
        <div class="card rounded-4 border-0">
            <div class="card-body p-md-5">
                <form asp-action="Cadastrar" method="post">
                    <h3>Formulário de Cadastro</h3>
                    <div>
                        <p class="mt-4">Preencha o campo abaixo para cadastrar uma nova materia.</p>
                    </div>
                    <div class="form-group d-grid mt-3 gap-2">
                        <label asp-for="Nome" class="control-label fs-5">Nome:</label>
                        <input asp-for="Nome" class="form-control" value="@Model.Nome" />
                        <span asp-validation-for="Nome" class="text-danger"></span>
                    </div>
                    <div class="form-group d-grid mt-3 gap-2">
                        <label asp-for="Serie" class="control-label fs-5">Serie:</label>
                        <input asp-for="Serie" class="form-control" value="@Model.Serie" />
                        <span asp-validation-for="Serie" class="text-danger"></span>
                    </div>
                    <div class="form-group d-grid gap-2 mt-3">
                        <label asp-for="DisciplinaSelecionada" class="control-label fs-5">Disciplina:</label>
                        <select asp-for="DisciplinaSelecionada" asp-items="@Model.DisciplinasDisponiveis" class="form-select">
                            <option value="">Nenhum contato selecionado</option>
                        </select>
                        <span asp-validation-for="DisciplinaSelecionada" class="text-danger"></span>
                    </div>
                    <div class="form-group d-flex align-items-center justify-content-end mt-5 gap-3">
                        <a href="/materias">Voltar para a listagem</a>
                        <button type="submit" class="btn btn-primary rounded-3 px-5">Confirmar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
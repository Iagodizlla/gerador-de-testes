@model List<Gerador_de_testes.ModuloQuestao.Questao>

@if (Model == null || !Model.Any())
{
    <div class="alert alert-warning">Nenhuma questão sorteada.</div>
}
else
{
    <ol>
        @foreach (var questao in Model)
        {
            <li class="mb-3">
                <div><strong>@questao.Enunciado</strong></div>
                <ol type="a">
                    @foreach (var alternativa in questao.Alternativas.Take(4))
                    {
                        <li>@alternativa.Resposta</li>
                    }
                </ol>
            </li>
        }
    </ol>
}
@using Gerador_de_testesWebApp.Models
@model RealizarTesteViewModel

@{
    Layout = "_Layout";
    ViewBag.Titulo = "Resultado do Teste";
}

<h2>@Model.Titulo</h2>
@for (int i = 0; i < Model.Questoes.Count; i++)
{
    var questao = Model.Questoes[i];
    <div class="mb-3">
        <strong>@(i+1). @questao.Enunciado</strong>
        <div>
            @foreach (var alternativa in questao.Alternativas)
            {
                var correta = alternativa.Correta ? " (Correta)" : "";
                var marcada = alternativa.Id == Model.Respostas[i] ? " (Sua resposta)" : "";
                <div>
                    @alternativa.Correta @correta @marcada
                </div>
            }
        </div>
        <div>
            <span class="badge @(Model.Resultados[i] ? "bg-success" : "bg-danger")">
                @(Model.Resultados[i] ? "Correta" : "Incorreta")
            </span>
        </div>
    </div>
}
